@model IEnumerable<Midterm.Models.Genre>

@{
    ViewBag.Title = "ShowGenres";
}

<h2>ShowGenres</h2>

<p>
    @Html.ActionLink("Add New Genre", "AddGenre")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Genre_Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre_Desc)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Genre_Code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genre_Desc)
        </td>
        <td class="btn btn-default">
            @Html.ActionLink("Edit", "EditGenre", new { sCode =item.Genre_Code })
        </td>
    </tr>
}

</table>
